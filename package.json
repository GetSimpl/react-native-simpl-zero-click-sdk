{
  "name": "react-native-simpl-zero-click-sdk",
  "version": "1.0.6",
  "description": "A React Native wrapper for Simpl Zero Click SDK",
  "main": "lib/commonjs/index",
  "module": "lib/module/index",
  "types": "lib/typescript/src/index.d.ts",
  "react-native": "src/index",
  "source": "src/index",
  "scripts": {
    "typescript": "tsc --noEmit",
    "lint": "eslint \"**/*.{js,ts,tsx}\" --fix",
    "prepare": "bob build",
    "release": "release-it",
    "pods": "cd example && pod-install --quiet",
    "bootstrap": "yarn && yarn pods"
  },
  "repository": "https://github.com/GetSimpl/react-native-simpl-zero-click-sdk",
  "bugs": {
    "url": "https://github.com/GetSimpl/react-native-simpl-zero-click-sdk/issues"
  },
  "homepage": "https://github.com/GetSimpl/react-native-simpl-zero-click-sdk#readme",
  "keywords": [
    "simpl",
    "simpl-zero-click-sdk",
    "react-native"
  ],
  "author": "Simpl",
  "license": "MIT",
  "contributors": [
    {
      "name": "Devarajan",
      "email": "devarajan@getsimpl.com"
    }
  ],
  "devDependencies": {
    "@react-native-community/bob": "^0.15.2",
    "@react-native-community/eslint-config": "^2.0.0",
    "@types/react": "^16.9.38",
    "@types/react-native": "^0.62.13",
    "@typescript-eslint/parser": "^3.3.0",
    "commitlint": "^8.3.5",
    "eslint": "^7.3.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.4",
    "husky": "^4.2.5",
    "metro": "^0.59.0",
    "metro-react-native-babel-preset": "^0.59.0",
    "pod-install": "^0.1.7",
    "prettier": "^2.0.5",
    "react": "^16.13.1",
    "react-native": "^0.62.2",
    "release-it": "^13.6.3",
    "typescript": "^3.9.5"
  },
  "peerDependencies": {
    "react": "*",
    "react-native": "*"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint && yarn typescript"
    }
  },
  "release-it": {
    "git": {
      "commitMessage": "chore: release ${version}",
      "tagName": "v${version}"
    },
    "npm": {
      "publish": true
    },
    "github": {
      "release": true
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "preset": "angular"
      }
    }
  },
  "eslintConfig": {
    "extends": [
      "@react-native-community",
      "prettier"
    ],
    "rules": {
      "prettier/prettier": [
        "error",
        {
          "quoteProps": "consistent",
          "singleQuote": true,
          "tabWidth": 2,
          "trailingComma": "es5",
          "useTabs": false
        }
      ]
    }
  },
  "eslintIgnore": [
    "node_modules/",
    "lib/"
  ],
  "prettier": {
    "quoteProps": "consistent",
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5",
    "useTabs": false
  },
  "@react-native-community/bob": {
    "source": "src",
    "output": "lib",
    "targets": [
      "commonjs",
      "module",
      "typescript"
    ]
  }
}
